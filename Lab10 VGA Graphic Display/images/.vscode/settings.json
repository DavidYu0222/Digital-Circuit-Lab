{
    "code-runner.ignoreSelection": true,
    "code-runner.executorMap": {    //設定副檔名為 xxx 時，作執行時會跑哪些命令
        //設定副檔名為 cpp 時執行命令。進入該檔案的資料夾，使用 g++ 加上其他參數編譯（也可以自行改 c++17），並且執行它。
        "cpp": "cd $dir & g++ -Wall -Wextra -O2 -std=c++17 \"$fileName\" -o \"$fileNameWithoutExt\" & $dir\"$fileNameWithoutExt\""
    },
    "code-runner.preserveFocus": false,
    "code-runner.clearPreviousOutput": true,    //清除上次在終端機執行的輸出。
    "code-runner.runInTerminal": true,          //在終端機上面跑，這一定要設定為 true，不然會跑到輸出，而非終端機。
    "code-runner.saveFileBeforeRun": true,      //執行前先存檔。
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "files.associations": {
        "iostream": "cpp",
        "algorithm": "cpp",
        "string": "cpp",
        "*.tcc": "cpp",
        "numeric": "cpp",
        "type_traits": "c",
        "typeinfo": "cpp",
        "vector": "cpp",
        "ostream": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "cctype": "cpp",
